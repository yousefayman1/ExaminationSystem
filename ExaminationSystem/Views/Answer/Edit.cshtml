@model ExaminationSystem.Models.Answer

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Answer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="AnswerDescription" class="control-label"></label>
                <input asp-for="AnswerDescription" class="form-control" />
                <span asp-validation-for="AnswerDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="isTrue" /> @Html.DisplayNameFor(model => model.isTrue)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a class="btn btn-danger" href="/Answer/Index/@Model.QuestionId">Back to List</a>
            </div>
        </form>
    </div>
</div>

<div>
    
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
