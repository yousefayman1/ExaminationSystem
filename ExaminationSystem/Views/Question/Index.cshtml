@model IEnumerable<Question>

@{
	ViewData["Title"] = "Index";
}

<h1>List of Questions</h1>

<p>
	<a class="btn btn-primary" asp-action="Create">Create New Question</a>
</p>
<table class="table table-striped table-bordered ">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.QuestionTitle)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Score)
			</th>
			<th style="width:22%">Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.QuestionTitle)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Score)
				</td>
				<td>
					<a class="btn btn-primary" asp-controller="Answer" asp-action="Index" asp-route-id="@item.Id">View answers</a> |
					<a class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">X</a>
				</td>
			</tr>
		}
	</tbody>
</table>
